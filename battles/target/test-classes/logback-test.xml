<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration>
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <appender name="STDOUT" class="ConsoleAppender">
        <encoder class="PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{15} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="khnu.mizhfac.bessarabova.game.GameTest" level="info" />
    <logger name="khnu.mizhfac.bessarabova.game.BattleTest" level="info" />
    <logger name="khnu.mizhfac.bessarabova.game.CanHit" level="all" />

    <root level="all">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>